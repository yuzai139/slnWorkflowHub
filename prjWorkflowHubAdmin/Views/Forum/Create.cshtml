@model prjWorkflowHubAdmin.ContextModels.TCategory

@{
    ViewData["Title"] = "新增類別";
}

<h1>新增類別</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FCategoryNumber" class="control-label">類別編號</label>
                @Html.TextBox("FCategoryNumber", "流水號自動生成", new { @class = "form-control", @readonly = "readonly" })
                <span asp-validation-for="FCategoryNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FCategoryName" class="control-label">類別名稱</label>
                <input asp-for="FCategoryName" class="form-control" />
                <span asp-validation-for="FCategoryName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-outline-primary me-2 " />
                <a asp-action="ForumIndex" class="btn btn-outline-warning">取消新增</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
