@model prjWorkflowHubAdmin.ContextModels.TCategory

@{
    ViewData["Title"] = "Edit";
}

<h1>修改類別名稱</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FCategoryNumber" class="control-label"></label>
                @Html.TextBoxFor(model => model.FCategoryNumber, new { @class = "form-control", @readonly = "readonly" })
                <span asp-validation-for="FCategoryNumber" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="FCategoryName" class="control-label"></label>
                <input asp-for="FCategoryName" class="form-control" />
                <span asp-validation-for="FCategoryName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-outline-primary me-2 " />
                <a asp-action="ForumIndex" class="btn btn-outline-warning">取消修改</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
