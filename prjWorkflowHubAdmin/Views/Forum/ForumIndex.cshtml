@model IEnumerable<prjWorkflowHubAdmin.ContextModels.TCategory>

@{
    <!--網頁標題-->
    ViewData["Title"] = "討論區管理";
}
<!--內容頁開始處-->
<h1>類別清單</h1>
<p>
    @using (Html.BeginForm())
    {

        @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢" />
    }

</p>

<p>
    <a asp-action="Create" style="color: #FF00FF;">新增類別</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FCategoryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FCategoryNumber)
                </td>
                <td>
                    @Html.ActionLink(item.FCategoryName ?? "未命名類別", "Details", "Category", new { id = item.FCategoryNumber }, null)
                </td>
                <td>
                    <span style="color: #green;">
                        @Html.ActionLink("修改", "Edit", "Forum", new { id = item.FCategoryNumber }, new { style = "color:  green;" })
                    </span>
                    <span style="margin-left: 15px;">
                        @Html.ActionLink("刪除", "Delete", "Forum", new { id = item.FCategoryNumber },
                                 new { style = "color: red;", onclick = "return confirm('確定要刪除嗎?')" })
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
