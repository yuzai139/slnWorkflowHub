@{
    ViewData["Title"] = "Login";
}

<h1>登入系統</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>請輸入帳號與密碼</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            帳號 ( 註冊時填寫的電子郵件 )
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
                <button id="demo" type="button" class="btn btn-primary">Demo</button>
            </div>
        </div>
    </div>
}

@section scripts{

    @* <div>
        @Html.ActionLink("註冊", "List")
    </div> *@
    <script>
        document.getElementById("demo").addEventListener("click", function(){
                document.getElementById("txtAccount").value = "Jesse@yahoo.com";
                document.getElementById("txtPassword").value = "000";
            }
        );

    </script>

}


