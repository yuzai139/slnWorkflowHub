@model prjWorkflowHubAdmin.ViewModels.LectureAndPublisher.LectureManageViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>修改講座紀錄</h1>

<h4>輸入修改資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="FLecRecordId" value=@Model.FLecRecordId />
            <div class="form-group">
                <label asp-for="FLecName" class="control-label"></label>
                <input asp-for="FLecName" class="form-control" />
                <span asp-validation-for="FLecName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FLectureId" class="control-label"></label>
                <input asp-for="FLectureId" class="form-control" />
                <span asp-validation-for="FLectureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FMemberId" class="control-label"></label>
                <input asp-for="FMemberId" class="form-control" />
                <span asp-validation-for="FMemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FPhone" class="control-label"></label>
                <input asp-for="FPhone" class="form-control" />
                <span asp-validation-for="FPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FEmail" class="control-label"></label>
                <input asp-for="FEmail" class="form-control" />
                <span asp-validation-for="FEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="修改並儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消修改</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
