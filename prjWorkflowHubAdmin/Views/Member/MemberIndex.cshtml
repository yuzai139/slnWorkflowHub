@model IEnumerable<prjWorkflowHubAdmin.ContextModels.TMember>

@{
    <!--網頁標題-->
    ViewData["Title"] = "會員管理";
}
<!--內容頁開始處-->
<h1>客戶資料一覽表</h1>
<p>
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢" />
    }
</p>
<p>
    <a asp-action="Create" class="btn btn-primary">新增客戶</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FPassword)
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit", "Member", new { id = item.FMemberId },
                             new { @class = "btn btn-success" })
                        @Html.ActionLink("刪除", "Delete", "Member", new { id = item.FMemberId },
                             new {onclick = "return confirm('確定要刪除嗎?')", Class = "btn btn-danger"})
                    </td>
                    
                </tr>
            }
        }
    </tbody>
</table>